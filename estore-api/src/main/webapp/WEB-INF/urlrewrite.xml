<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<!--

    Configuration file for UrlRewriteFilter
    http://www.tuckey.org/urlrewrite/

-->
<urlrewrite>
	<!-- Markup, styles and scripts -->
	<rule>
    	<from>^/(?!site)(.*).(js|css|html)$</from>
		<to>/site/$1.$2</to>
    </rule>
    <!-- Images -->
	<rule>
    	<from>^/(?!site)(.*).(gif|png|jpg|ico)$</from>
		<to>/site/$1.$2</to>
    </rule>
    <!-- Custom fonts -->
	<rule>
    	<from>^/(?!site)(.*).(ttf|eot|otf|woff)$</from>
		<to>/site/$1.$2</to>
    </rule>
    
    <!-- Handle welcome page -->
	<rule>
    	<from>^/$</from>
		<to type="redirect">/index.html</to>
    </rule>
    
</urlrewrite>
